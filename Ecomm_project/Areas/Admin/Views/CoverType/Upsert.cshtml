@model Ecomm_project.Models.CoverType
@{
    ViewData["Title"] = "Upsert";
    var title = Model.Id != 0 ? "Edit Covertype" : "New Covertype";
}

<form method="post">
    <div class="row ">
        <div class="col-10 border bottom">
            <h2 class="text-bg-light text-body-emphasis">@title</h2>
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger">

        </div>
        <div class="col-8 m-2 p-2">
            <div class="form-grop row">
                <div class="col-4">
                    <label asp-for="Name" class="text-success"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Name" placeholder="Input Covertype" class=" form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row m-2 p-2">
                <div class="col-8 offset-4">
                    @if (Model.Id != 0)
                    {
                        <partial name="_EditBacktolist" />
                    }
                    else
                    {
                        <partial name="_CreateBacktolist" />
                    }
                </div>
            </div>
        </div>
    </div>
</form>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}

